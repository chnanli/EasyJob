<?xml version="1.0" encoding="utf-8" ?>
<!--assembly:程序集，namespace:命名空间-->
<hibernate-mapping  xmlns="urn:nhibernate-mapping-2.2" assembly="EasyJob.Pojo"  namespace="EasyJob.Pojo.Pojo">
   <class name="EasyJob.Pojo.Pojo.WorkSub,EasyJob.Pojo" table="woWorkSub">
     <cache usage="read-write" />
     <!--主键-->
     <id name="Id">
      <generator class="guid" />
     </id>
     <property name="ModDate"/>
     <property name="UploadDate"/>
     <property name="Del" column="DeleteFlag"/>
     <property name="TrashFlag"/>
     <property name="ExHost" length="500"/>

     <many-to-one name="Work" />

     <property name="OrderType" length="15" />
     <many-to-one name="OrderEmp" />
     <property name="Depict" length="300" not-null="false" />
     <many-to-one name="Dept" />
     <many-to-one name="Emp" />
     <property name="DistMode" />
     <many-to-one name="DistEmp" />
     <property name="Status" />
     <property name="Remark" type="String">
       <column name="Remark" sql-type="Text" length="16" />
     </property>
   </class>
</hibernate-mapping>